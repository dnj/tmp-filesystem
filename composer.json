{
    "name": "dnj/tmp-filesystem",
    "description": "Simple local interface to work with temporary files and directories",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "dnj/local-filesystem": "^1.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^0.12.68",
        "friendsofphp/php-cs-fixer": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "dnj\\Filesystem\\Tmp\\": "src/"
        }
    },
    "scripts": {
        "test:composer:validate": "@composer validate",
        "test:composer": [
            "@test:composer:validate"
        ],
        "test:types": "vendor/bin/phpstan analyze",
        "test:phpunit": "vendor/bin/phpunit",
        "test:codestyle": "vendor/bin/php-cs-fixer fix -v --dry-run --stop-on-violation --using-cache=no",
        "test": [
            "@test:composer",
            "@test:types",
            "@test:phpunit",
            "@test:codestyle"
        ]
    }
}
